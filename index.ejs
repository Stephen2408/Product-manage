<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Product Management System</h1>
        <ul class="list-group mt-3">
            <% products.forEach(product => { %>
                <li class="list-group-item">
                    <strong><%= product.productName %></strong> - 
                    Quantity: <%= product.quantity %> - 
                    Store Code: <%= product.productStoreCode %>
                    <form method="POST" action="/products/<%= product._id %>/delete" class="float-right">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
        <form method="POST" action="/products" class="mt-3">
            <div class="form-group">
                <label for="productName">Product Name</label>
                <input type="text" class="form-control" id="productName" name="productName">
            </div>
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" class="form-control" id="quantity" name="quantity">
            </div>
            <div class="form-group">
                <label for="productStoreCode">Store Code</label>
                <input type="text" class="form-control" id="productStoreCode" name="productStoreCode">
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>
</body>
</html>